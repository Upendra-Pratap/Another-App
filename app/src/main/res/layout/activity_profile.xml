<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_height="50dp">


        <ImageView
            android:id="@+id/backArrowProfileee"
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="15dp"
            android:src="@drawable/ic_baseline_arrow_back_24"
            app:tint="@color/black" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/userProfileEmployerrrr"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/employee" />

                    <RelativeLayout
                        android:layout_width="35dp"
                        android:layout_height="45dp"
                        android:layout_marginLeft="75dp"
                        android:layout_marginTop="65dp"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/addImageEmployerrr"
                            android:layout_width="30dp"
                            android:layout_height="35dp"
                            android:src="@drawable/ic_baseline_camera_alt_24"
                            app:tint="@color/black" />

                    </RelativeLayout>

                </RelativeLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:background="@color/skyBlue"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="15dp"
                        android:text="All Information"
                        android:textColor="@color/white"
                        android:textSize="22dp"
                        android:textStyle="bold"></TextView>


                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="20dp"
                        android:background="@color/skyBlue"
                        android:elevation="10dp"
                        app:cardCornerRadius="15dp"
                        app:cardElevation="10dp">




                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="45dp"
                                android:layout_marginStart="15dp"
                                android:layout_marginTop="20dp"
                                android:layout_marginEnd="15dp"
                                android:background="@drawable/background_border">

                                <ImageView
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"
                                    android:layout_alignParentLeft="true"
                                    android:layout_centerInParent="true"
                                    android:layout_marginLeft="10dp"
                                    android:src="@drawable/user"
                                    tools:ignore="UseAppTint" />

                                <EditText
                                    android:id="@+id/PNameEEdit"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_alignParentLeft="true"
                                    android:layout_centerInParent="true"
                                    android:layout_marginLeft="50dp"
                                    android:background="@null"
                                    android:hint="Name"
                                    android:inputType="textPersonName"
                                    android:padding="6dp"
                                    android:textSize="15dp" />

                            </RelativeLayout>




                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="45dp"
                                android:layout_marginStart="15dp"
                                android:layout_marginTop="20dp"
                                android:layout_marginEnd="15dp"
                                android:background="@drawable/background_border">

                                <ImageView
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"
                                    android:layout_alignParentLeft="true"
                                    android:layout_centerInParent="true"
                                    android:layout_marginLeft="10dp"
                                    android:src="@drawable/emaile"
                                    tools:ignore="UseAppTint" />


                                <EditText
                                    android:id="@+id/PEmailEEdit"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_alignParentLeft="true"
                                    android:layout_centerInParent="true"
                                    android:layout_marginLeft="50dp"
                                    android:background="@null"
                                    android:hint="Email"
                                    android:inputType="textEmailAddress"
                                    android:padding="6dp"
                                    android:textSize="15dp" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="45dp"
                                android:layout_marginStart="12dp"
                                android:layout_marginTop="20dp"
                                android:layout_marginEnd="12dp"
                                android:background="@drawable/background_border">


                                <ImageView
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"
                                    android:layout_alignParentLeft="true"
                                    android:layout_centerInParent="true"
                                    android:layout_marginLeft="10dp"
                                    android:tint="@color/skyBlue"
                                    android:src="@drawable/ic_baseline_local_phone_24"
                                    tools:ignore="UseAppTint" />

                                <EditText
                                    android:id="@+id/PPhoneEEdit"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_alignParentLeft="true"
                                    android:layout_centerInParent="true"
                                    android:layout_marginLeft="50dp"
                                    android:background="@null"
                                    android:hint="Phone Number"
                                    android:inputType="number"
                                    android:maxLength="10"
                                    android:padding="6dp"
                                    android:textSize="15dp" />


                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="45dp"
                                android:layout_marginStart="12dp"
                                android:layout_marginTop="20dp"
                                android:layout_marginEnd="12dp"
                                android:background="@drawable/background_border">

                                <ImageView
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"
                                    android:layout_alignParentLeft="true"
                                    android:layout_centerInParent="true"
                                    android:layout_marginLeft="10dp"
                                    android:src="@drawable/pin"
                                    android:tint="@color/skyBlue"
                                    tools:ignore="UseAppTint" />


                                <EditText
                                    android:id="@+id/PCompanyAddEdit"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_alignParentLeft="true"
                                    android:layout_centerInParent="true"
                                    android:layout_marginLeft="50dp"
                                    android:background="@null"
                                    android:hint="Company Address"
                                    android:inputType="textWebEmailAddress"
                                    android:padding="6dp"
                                    android:textSize="15dp" />

                            </RelativeLayout>


                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="45dp"
                                android:layout_marginStart="12dp"
                                android:layout_marginTop="20dp"
                                android:layout_marginEnd="12dp"
                                android:background="@drawable/background_border">


                                <ImageView
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"
                                    android:layout_alignParentLeft="true"
                                    android:layout_centerInParent="true"
                                    android:layout_marginLeft="10dp"
                                    android:src="@drawable/price_list"
                                    android:tint="@color/skyBlue"
                                    tools:ignore="UseAppTint" />


                                <EditText
                                    android:id="@+id/PDailyRateAddress"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_alignParentLeft="true"
                                    android:layout_centerInParent="true"
                                    android:layout_marginLeft="50dp"
                                    android:background="@null"
                                    android:hint="Daily Rate"
                                    android:inputType="number"
                                    android:padding="6dp"
                                    android:textSize="15dp" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="45dp"
                                android:layout_marginStart="12dp"
                                android:layout_marginTop="15dp"
                                android:layout_marginEnd="12dp"
                                android:background="@drawable/background_border">


                                <ImageView
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"
                                    android:layout_alignParentLeft="true"
                                    android:layout_centerInParent="true"
                                    android:layout_marginLeft="10dp"
                                    android:tint="@color/skyBlue"
                                    android:src="@drawable/ic_baseline_lock_24"
                                    tools:ignore="UseAppTint" />


                                <EditText
                                    android:id="@+id/EmpUserIdppp"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_alignParentLeft="true"
                                    android:layout_centerInParent="true"
                                    android:layout_marginLeft="50dp"
                                    android:background="@null"
                                    android:hint="Enter Emp Id"
                                    android:inputType="number"
                                    android:padding="6dp"
                                    android:textSize="15dp" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="45dp"
                                android:layout_marginStart="12dp"
                                android:layout_marginTop="15dp"
                                android:layout_marginEnd="12dp"
                                android:background="@drawable/background_border">

                                <!--      <EditText
                                    android:id="@+id/Category11"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_alignParentLeft="true"
                                    android:layout_centerInParent="true"
                                    android:layout_marginLeft="10dp"
                                    android:background="@null"
                                    android:hint="Category"
                                    android:inputType="textEmailAddress"
                                    android:padding="6dp"
                                    android:textSize="15dp" />-->

                                <Spinner
                                    android:id="@+id/Spinner111"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginRight="10dp"
                                    android:padding="6dp"
                                    android:popupBackground="@drawable/spinner_background"
                                    app:tint="@color/black" />


                            </RelativeLayout>


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="12dp"
                                android:layout_marginTop="15dp"
                                android:padding="8dp"
                                android:weightSum="10"
                                android:orientation="horizontal"
                                android:layout_marginEnd="12dp"
                                android:background="@drawable/background_border">

                                <ImageView
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:layout_alignParentLeft="true"
                                    android:layout_centerInParent="true"
                                    android:layout_marginLeft="10dp"
                                    android:src="@drawable/uploadcv"
                                    android:tint="@color/skyBlue"
                                    tools:ignore="UseAppTint" />


                                <TextView
                                    android:id="@+id/uploadCvEditt"
                                    android:layout_width="0dp"
                                    android:layout_weight="7"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"
                                    android:layout_centerHorizontal="true"
                                    android:layout_marginLeft="10dp"
                                    android:gravity="center_vertical"
                                    android:text="Upload CV"
                                    android:padding="6dp"
                                    android:textSize="15dp" />

                                <!-- <com.github.barteksc.pdfviewer.PDFView
                                    android:id="@+id/pdf_view"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    tools:ignore="MissingClass" />-->


                                <TextView
                                    android:id="@+id/uploadCVV"
                                    android:layout_width="0dp"
                                    android:layout_weight="3"
                                    android:layout_height="match_parent"
                                    android:layout_alignParentRight="true"
                                    android:layout_centerInParent="true"
                                    android:background="@null"
                                    android:gravity="center"
                                    android:text="Upload CV"
                                    android:textColor="@color/blue"
                                    android:textSize="15dp"
                                    android:textStyle="bold" />


                            </LinearLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="45dp"
                                android:layout_marginStart="12dp"
                                android:layout_marginTop="15dp"
                                android:layout_marginEnd="12dp"
                                android:background="@drawable/background_border">

                                <ImageView
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:layout_alignParentLeft="true"
                                    android:layout_centerInParent="true"
                                    android:layout_marginLeft="10dp"
                                    android:src="@drawable/employment"
                                    android:tint="@color/skyBlue"
                                    tools:ignore="UseAppTint" />


                                <EditText
                                    android:id="@+id/EmpHistoryppp"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_alignParentLeft="true"
                                    android:layout_centerInParent="true"
                                    android:layout_marginLeft="50dp"
                                    android:background="@null"
                                    android:hint="Employment Experience"
                                    android:inputType="textEmailAddress"
                                    android:padding="6dp"
                                    android:textSize="15dp" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="45dp">

                                <CheckBox
                                    android:id="@+id/checkboxppp"
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:layout_marginLeft="15dp"
                                    android:checked="true"
                                    android:layout_marginTop="18dp"
                                    android:buttonTint="@color/skyBlue"
                                    android:textColor="@color/black" />


                                <TextView
                                    android:id="@+id/term"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="18dp"
                                    android:layout_toRightOf="@+id/checkboxppp"
                                    android:text="Term and Conditions"
                                    android:textColor="@color/black"
                                    android:textSize="15dp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/termCondEmployeee"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="8dp"
                                    android:layout_marginTop="18dp"
                                    android:layout_toRightOf="@+id/term"
                                    android:text="T&amp;C"
                                    android:textColor="@color/blue"
                                    android:textStyle="bold" />
                            </RelativeLayout>


                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/UpdateProfileeedit"
                                android:layout_width="match_parent"
                                android:layout_height="45dp"
                                android:layout_marginStart="15dp"
                                android:layout_marginTop="20dp"
                                android:layout_marginEnd="15dp"
                                android:layout_marginBottom="30dp"
                                android:background="@drawable/black_button_background"
                                android:text="Update"
                                android:textAllCaps="false"
                                android:textColor="@color/white"
                                android:textSize="18dp"></androidx.appcompat.widget.AppCompatButton>

                        </androidx.appcompat.widget.LinearLayoutCompat>


                    </androidx.cardview.widget.CardView>


                </LinearLayout>


            </LinearLayout>

        </LinearLayout>

    </ScrollView>


</LinearLayout>





